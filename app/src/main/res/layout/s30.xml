<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light">

    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_drag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"

        android:gravity="center">

        <ImageView
            android:id="@+id/drag"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s30_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s30_2"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_2" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s30_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s30_3"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_3" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s30_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_s30_2"
        android:layout_centerInParent="true"
        android:layout_marginRight="80dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s30_4"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_4" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s30_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_s30_3"
        android:layout_marginLeft="75dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s30_5"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_5" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_s30_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:layout_marginRight="60dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s30_6"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_6" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s30_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s30_7"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_7" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s30_8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s30_8"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:src="@drawable/s30_8" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/pa1_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>