<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light">

    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/shirt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:background="@drawable/s138_1" />

    <ImageView
        android:id="@+id/empty"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_below="@+id/shirt"
        android:layout_centerInParent="true"
        android:src="@drawable/s138_2" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/empty">

        <RelativeLayout
            android:id="@+id/darg_frock_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="100dp">

            <ImageView
                android:id="@+id/s138_3"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/s138_3" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fixed_helmet_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="100dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/s138_4"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/s138_4" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fixed_shirt_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="100dp"
            android:layout_marginRight="100dp">

            <ImageView
                android:id="@+id/s138_5"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/s138_5" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/fixed_skirt_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="100dp"
            android:layout_marginLeft="100dp">

            <ImageView
                android:id="@+id/s138_6"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="@drawable/s138_6" />

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pa4_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>

