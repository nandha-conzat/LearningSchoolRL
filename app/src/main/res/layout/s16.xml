<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light">

    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_s16_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s16_1"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:src="@drawable/s16_1" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s16_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s16_2"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:src="@drawable/s16_2" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s16_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_s16_1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s16_3"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:src="@drawable/s16_3" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s16_5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_s16_3"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s16_5"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:src="@drawable/s16_5" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s16_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_s16_2"
        android:layout_marginTop="10dp"
        android:layout_marginRight="70dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s16_4"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:src="@drawable/s16_4" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_s16_6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/rl_s16_4"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s16_6"
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:src="@drawable/s16_6" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s16_7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s16_7"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:src="@drawable/s16_7" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pa1_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>