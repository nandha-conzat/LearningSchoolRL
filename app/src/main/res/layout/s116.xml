<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light">

    <TextView
        android:id="@+id/txt_dispaly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="25sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:id="@+id/rl_s116_1"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s116_1"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/s116_1" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s116_2"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s116_2"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/s116_2" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s116_3"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s116_3"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/s116_3" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s116_5"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/rl_s116_3"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s116_5"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="@drawable/s116_5" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_s116_4"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="70dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s116_4"
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:background="@drawable/s116_4" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/rl_s116_6"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginBottom="40dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/s116_6"
            android:layout_width="250dp"
            android:layout_height="150dp"
            android:background="@drawable/s116_1" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pa1_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/next" />
    </RelativeLayout>

</RelativeLayout>